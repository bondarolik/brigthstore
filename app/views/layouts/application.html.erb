<!DOCTYPE html>
<html>
  <head>
    <title>Brigthstore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!-- Responsive -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <!--Navbar-->
  
  <nav class="navbar navbar-expand-navbar-expand-lg navbar-lewagon">
    <div class="container-fluid">
      <div class = "d-flex justify-content-between navbar1 ">
        <div>
          <%= link_to image_tag("PNG.png"), root_path, class:"img_logo"%>
        </div>
        <div>
          <form class= "d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" readonly>
            <button class="btn btn-danger " type="submit">Search</button>
            <button class="btn btn-danger " type="submit">Login</button>
          </form>
        </div>
        <div>
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
        </div>
      </div>
  </nav>
  <div class = "row navbar-lewagon2">
    <div class="d-flex flex-row mb-3">
      <div class= "col-sm-6 col-md-3 col-lg-3 col-xl3 text-center menu_link" >
        <%= link_to  "Inicio", root_path %>
      </div>
      <div class= "col-sm-6 col-md-3 col-lg-3 col-xl3 text-center menu_link" >
        <%= link_to  "Compra", root_path %>
      </div>
      <div class= "col-sm-6 col-md-3 col-lg-3 col-xl3 text-center menu_link" >
        <%= link_to  "Nosotros", root_path %>
      </div>
      <div class= "col-sm-6 col-md-3 col-lg-3 col-xl3 text-center menu_link" >
        <%= link_to  "Contacto", root_path %>
      </div>
    </div>   
  </div>
  
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
<!--Foot-->
  <div class="footer row">
    <div class="col-sm-12 col-sm-6 col-lg-8 col-xl-8 foot">
      <div class="d-flex flex-row mb-3 "> <!--RRSS-->
        <div class= "col-sm-6 col-md-3 col-lg-3 col-xl3 text-center menu_link" >
          <a href="#" class="menu_link">
            <i class="fab fa-facebook-square"></i>
          </a>
        </div>
        <div class= "col-sm-6 col-md-3 col-lg-3 col-xl3 text-center menu_link" >
          <a href="#" class="menu_link">
            <i class="fab fa-whatsapp "></i>
          </a>        
        </div>
        <div class= "col-sm-6 col-md-3 col-lg-3 col-xl3 text-center menu_link" >
          <a href="#" class="menu_link">
            <i class="fab fa-fw fa-instagram "></i>
          </a>        
        </div>
        <div class= "col-sm-6 col-md-3 col-lg-3 col-xl3 text-center menu_link" >
          <a href="#"class="menu_link">
            <i class="fab fa-tiktok"></i>
          </a>
        </div>
      </div>
      <div>
        <div class="d-flex flex-row mb-3">
          <div class= "col-sm-6 col-md-3 col-lg-3 col-xl3 text-center menu_link" >
             <%= link_to  "Inicio", root_path %>
          </div>
          <div class= "col-sm-6 col-md-3 col-lg-3 col-xl3 text-center menu_link" >
            <%= link_to  "Compra", root_path %>
          </div>
          <div class= "col-sm-6 col-md-3 col-lg-3 col-xl3 text-center menu_link" >
            <%= link_to  "Nosotros", root_path %>
          </div>
          <div class= "col-sm-6 col-md-3 col-lg-3 col-xl3 text-center menu_link" >
            <%= link_to  "Contacto", root_path %>
          </div>
        </div>
      </div>
    </div>
    <div class= "col-sm-12 col-sm-6 col-lg-4 col-xl-4 text-center search_logo">
      <form class= "d-flex">
         <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" readonly>
        <button class="btn btn-danger " type="submit">Search</button>
      </form>
      <div class = "text-rigth">
        <%= link_to image_tag("PNG.png"), root_path, class:"img_logo"%>
      </div>
     
    </div>
  </div>
  </body>
</html>